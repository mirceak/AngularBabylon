{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/server",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2018", "dom"],
    "paths": {
      "@kernel/controllers/*": ["./client/src/kernel/backend/controllers/*"],
      "@custom/*": ["./*"]
    },
  },
}
